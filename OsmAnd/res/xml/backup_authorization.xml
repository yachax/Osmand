<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:title="@string/backup_and_restore">

	<Preference
		android:key="authorize"
		android:layout="@layout/fragment_authorize_cloud"
		android:persistent="false"
		android:selectable="false" />

	<Preference
		android:layout="@layout/list_item_divider"
		android:selectable="false" />

	<Preference
		android:key="local_backup"
		android:layout="@layout/preference_login"
		android:persistent="false"
		android:summary="@string/local_backup_descr"
		android:title="@string/local_backup" />

	<Preference
		android:key="backup_to_file"
		android:layout="@layout/preference_button"
		android:persistent="false"
		android:title="@string/backup_into_file"
		tools:icon="@drawable/ic_action_save_to_file" />

	<Preference
		android:key="local_backup_divider"
		android:layout="@layout/divider_half_item_with_background"
		android:selectable="false" />

	<Preference
		android:key="restore_from_file"
		android:layout="@layout/preference_button"
		android:persistent="false"
		android:title="@string/restore_from_file"
		tools:icon="@drawable/ic_action_read_from_file" />

	<Preference
		android:layout="@layout/card_bottom_divider"
		android:selectable="false" />

</PreferenceScreen>